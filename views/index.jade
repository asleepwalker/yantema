doctype html
html(lang="ru")
	head
		title="Yantema"
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", media="screen", href="assets/bootstrap/dist/css/bootstrap.min.css")
		link(rel="stylesheet", media="screen", href="assets/bootstrap/dist/css/bootstrap-theme.min.css")
		link(rel="stylesheet", media="screen", href="assets/jt.timepicker/jquery.timepicker.css")
		link(rel="stylesheet", media="screen", href="css/common.css")
		link(rel="icon", href="favicon.ico")
	body(ng-controller="posts")
		button.prev-day.glyphicon.glyphicon-menu-left.hidden-xs(ng-click="load(day.subtract(1, 'days'))")
		button.next-day.glyphicon.glyphicon-menu-right.hidden-xs(ng-click="load(day.add(1, 'days'))")
		div.container
			h1="{{day | moment : 'dddd, D MMMM YYYY' | capitalizeFirstLetter }}"
			div.progress.progress-striped
				div.progress-bar(style="width: 20%;")
			div.main.col-sm-9
				div.reports
					div.item(ng-repeat="post in posts")
						p.time
							span.glyphicon.glyphicon-time
							=" "
							span.interval="{{post.start.dateTime | date : 'H:mm'}} — {{post.end.dateTime | date : 'H:mm'}} ({{duration(post.start.dateTime, post.end.dateTime)}})"
						p.text="{{post.summary}}"
					div.alert.alert-info(ng-show="posts.length == 0", ng-cloak, role="alert")
						b="Время не отмечено!"
						=" Укажите, чем вы занимались сегодня."
					form.add-report(method="post", action="posts")
						div.form-group
							label.control-label="Процесс:"
							input.form-control(type="text", name="text")
						div.row
							div.form-group.col-md-6
								label.control-label="Время:"
								div.input-group.time-select
									div.input-group-addon="с"
									input.form-control.time.start(type="text", name="since")
									div.input-group-addon="до"
									input.form-control.time.end(type="text", name="till")
							div.form-group.col-md-6
								label.control-label="Задача:"
								select.form-control(name="task")
									option(selected)="Не указано"
						button.btn.btn-primary.pull-right(type="submit")="Отметить время"
						div.clearfix
			div.tasks.aside.col-sm-3.hidden-xs
				h2="Задачи"
				div.checkbox
					label
						input(type="checkbox")
						=" Сделать Yantema"
			div.statistic.aside.col-sm-3.hidden-xs
				h2="Итого"
				p
					="Сделать Yantema — "
					span.time="1 ч 20 м"
		script(src="assets/jquery/dist/jquery.min.js")
		script(src="assets/bootstrap/dist/js/bootstrap.min.js")
		script(src="assets/angular/angular.min.js")
		script(src="assets/moment/min/moment.min.js")
		script(src="assets/moment/locale/ru.js")
		script(src="assets/jt.timepicker/jquery.timepicker.min.js")
		script(src="assets/datepair.js/dist/jquery.datepair.min.js")
		script(src="js/app.js")
		script(src="https://apis.google.com/js/client.js?onload=checkAuth")